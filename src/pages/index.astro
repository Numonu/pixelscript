---
import Header from "../layout/Header.astro";
import Footer from "../layout/Footer.astro";
import Hero from "../layout/Hero.astro";
import "../global/style.css";
import Gallery from "../layout/Gallery.astro";
import LastUpdate from "../components/LastUpdate.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Programming wallpapers for developers. Find inspiring images and backgrounds related to programming and coding.">
  		<meta name="keywords" content="wallpapers, programming, development, coding, developers , 4K , web">
  		<meta name="author" content="Pixelscript">
		<title>The best wallpapers for developers - Pixelscript</title>
	</head>
	<body class="bg-[rgb(28,28,28)] text-neutral-50 px-4">
		<div class="max-w-[1200px] mx-auto">
			<Header/>
			<Hero/>
			<Gallery/>
			<LastUpdate/>
			<Footer/>
		</div>
	</body>
	<script src="https://kit.fontawesome.com/65a19dc040.js" crossorigin="anonymous"></script>
</html>
