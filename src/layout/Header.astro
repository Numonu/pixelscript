---
import HeaderLink from "../components/HeaderLink.astro";
---

<header class="py-4 flex justify-between items-center">
    <div
        class="border-neutral-50 grid place-items-center w-12 aspect-square rounded-lg border-2 cursor-pointer hover:bg-neutral-50 hover:text-neutral-900 transition-colors"
    >
        <i class="fa-solid fa-memory text-2xl"></i>
    </div>
    <ul class="flex justify-between items-center gap-4 text-lg">
        <HeaderLink>
            <i class="fa-brands fa-instagram"></i>
        </HeaderLink>
        <HeaderLink>
            <i class="fa-brands fa-linkedin-in"></i>
        </HeaderLink>
        <HeaderLink>
            <i class="fa-brands fa-github-alt"></i>
        </HeaderLink>
    </ul>
</header>
