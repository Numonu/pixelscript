---
import Download from "../components/Download.astro";
import HeaderStats from "../components/HeaderStats.astro";
import WallpaperCard from "../components/WallpaperCard.astro";
---

<style>
    .button-light:hover {
        --color: rgb(132, 204, 22);
        box-shadow: inset 0 0 5px var(--color), inset 0 0 10px var(--color),
            inset 0 0 25px var(--color), 0 0 5px var(--color),
            0 0 10px var(--color), 0 0 25px var(--color);
    }
</style>
<section class="grid grid-cols-1 lg:grid-cols-2">
    <div class="py-12 lg:py-28">
        <div class="mb-12">
            <h1 class="text-5xl mb-2">
                Extraordinary rare <br class="hidden md:block" /> digital wallpaper
            </h1>
            <h2 class="text-2xl mb-6">
                by <span class="text-lime-500">Numonu</span>
            </h2>
            <button
                class="bg-lime-500 button-light font-medium flex items-center gap-2 px-4 py-3 rounded-full uppercase transition-shadow"
            >
                <span>view more</span>
                <i class="fa-solid fa-chevron-down"></i>
            </button>
        </div>
        <HeaderStats />
    </div>
    <div class="flex items-center">
        <WallpaperCard
            title="js_cubes"
            src="https://cdn.pixabay.com/photo/2023/06/07/12/51/insect-8047159__340.jpg"
        >
            <Download
                title="js_cubes"
                actions={[
                    {
                        resolution: [2048, 1080],
                        size: 4,
                        src: "#",
                    },
                    {
                        resolution: [1048, 720],
                        size: 2,
                        src: "#",
                    },
                    {
                        resolution: [720, 320],
                        size: 1,
                        src: "#",
                    },
                ]}
            />
        </WallpaperCard>
    </div>
</section>
